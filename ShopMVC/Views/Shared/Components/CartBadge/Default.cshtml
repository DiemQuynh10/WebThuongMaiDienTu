@model int
@{
    var total = (decimal)(ViewBag.Total ?? 0m);
}

<a asp-controller="GioHang" asp-action="Index" class="shopee-cart-btn text-dark text-decoration-none">

    <i class="bi bi-cart3" style="font-size: 1.5rem;"></i>

    @if (Model > 0)
    {
        <span class="shopee-badge">
            @(Model > 99 ? "99+" : Model.ToString())
        </span>
    }
</a>