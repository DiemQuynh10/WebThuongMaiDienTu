@model ShopMVC.Models.ViewModels.FlashSaleViewModel
@{
    ViewData["Title"] = "Săn Deal Giờ Vàng";
    // Tính thời gian để truyền xuống JS
    var endTimeIso = Model.EndTime.ToString("yyyy-MM-ddTHH:mm:ss");
}

<div class="container py-5">
    <div class="text-center mb-5">
        <div class="d-inline-block p-4 rounded-4 shadow-sm bg-white border border-danger border-2 position-relative">
            <h1 class="fw-bold text-danger mb-2"><i class="bi bi-lightning-fill"></i> @Model.TenChuongTrinh</h1>
            <p class="text-muted mb-3">Kết thúc trong</p>
            <div class="d-flex justify-content-center gap-3" id="countdown-timer">
                <div class="time-box"><span id="h">00</span><small>Giờ</small></div>
                <div class="time-box"><span id="m">00</span><small>Phút</small></div>
                <div class="time-box"><span id="s">00</span><small>Giây</small></div>
            </div>
        </div>
    </div>

    <div class="row row-cols-2 row-cols-md-4 g-4">
        @foreach (var item in Model.Items)
        {
            var sp = item.SanPham;
            var anh = sp.Anhs?.OrderBy(a => a.LaAnhChinh ? 0 : 1).FirstOrDefault()?.Url;
            if (!string.IsNullOrEmpty(anh) && !anh.StartsWith("http") && !anh.StartsWith("/")) { anh = $"/images/sp/{anh}"; }
            if (string.IsNullOrEmpty(anh)) { anh = "/images/no-image.png"; }

            int phanTramGiam = 0;
            if (item.GiaGoc > 0)
            {
                phanTramGiam = (int)Math.Round((item.GiaGoc - item.GiaSale) / item.GiaGoc * 100);
            }

            <div class="col">
                <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden position-relative product-flash-card">
                    @if (phanTramGiam > 0)
                    {
                        <div class="position-absolute top-0 end-0 bg-danger text-white fw-bold px-2 py-1 rounded-bottom-start-3 small z-2">
                            -@phanTramGiam%
                        </div>
                    }

                    <a asp-controller="SanPham" asp-action="ChiTiet" asp-route-id="@sp.Id" class="d-block overflow-hidden">
                        <div class="ratio ratio-1x1">
                            <img src="@anh" class="card-img-top object-fit-contain p-3 hover-zoom" alt="@sp.Ten">
                        </div>
                    </a>

                    <div class="card-body d-flex flex-column pt-0">
                        <h6 class="card-title text-truncate-2 mb-2" style="height: 40px;">
                            <a asp-controller="SanPham" asp-action="ChiTiet" asp-route-id="@sp.Id" class="text-decoration-none text-dark fw-semibold">@sp.Ten</a>
                        </h6>

                        <div class="mt-auto">
                            <div class="d-flex align-items-center gap-2 mb-2">
                                <span class="text-danger fw-bold fs-5">@item.GiaSale.ToString("#,##0") đ</span>
                                <span class="text-muted text-decoration-line-through small">@item.GiaGoc.ToString("#,##0") đ</span>
                            </div>

                            <div class="progress position-relative mt-2" style="height: 18px; background-color: #ffecd1; border-radius: 10px;">
                                <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated" role="progressbar" style="width: @(item.PhanTramDaBan)%"></div>
                                <div class="position-absolute w-100 text-center text-danger fw-bold small d-flex align-items-center justify-content-center h-100" style="font-size: 0.7rem;">
                                    @if (item.SoLuongDaBan >= item.SoLuongPhanBo)
                                    {
                                        <span>CHÁY HÀNG</span>
                                    }
                                    else
                                    {
                                        <span>Đã bán @item.SoLuongDaBan</span>
                                    }
                                </div>
                            </div>

                            <button class="btn btn-danger w-100 mt-3 rounded-pill fw-bold btn-buy-now shadow-sm"
                                    onclick="openFlashSaleModal('@sp.Id', '@sp.Ten', '@item.GiaSale.ToString("#,##0") đ', '@anh')"
                                    @(item.SoLuongDaBan >= item.SoLuongPhanBo ? "disabled" : "")>
                                @if (item.SoLuongDaBan >= item.SoLuongPhanBo)
                                {
                                    <span>HẾT HÀNG</span>
                                }
                                else
                                {
                                    <span>MUA NGAY</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="buyNowModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title fw-bold">Xác nhận mua ngay</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="d-flex gap-3">
                    <img id="modal-img" src="" class="rounded border" style="width: 80px; height: 80px; object-fit: cover;">
                    <div>
                        <h6 id="modal-name" class="fw-bold mb-1">Tên sản phẩm</h6>
                        <p class="text-danger fw-bold mb-0" id="modal-price">0 đ</p>
                    </div>
                </div>

                <div class="mt-4">
                    <label class="form-label fw-semibold">Số lượng:</label>
                    <div class="input-group" style="width: 140px;">
                        <button class="btn btn-outline-secondary" type="button" onclick="this.parentNode.querySelector('input[type=number]').stepDown()">-</button>
                        <input type="number" class="form-control text-center" id="modal-quantity" value="1" min="1" max="5">
                        <button class="btn btn-outline-secondary" type="button" onclick="this.parentNode.querySelector('input[type=number]').stepUp()">+</button>
                    </div>
                </div>

                <input type="hidden" id="modal-product-id" />
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn btn-light rounded-pill" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" onclick="confirmBuyNow()">
                    Đến trang thanh toán <i class="bi bi-arrow-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .time-box {
            background: #111;
            color: #fff;
            border-radius: 8px;
            width: 60px;
            height: 60px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

            .time-box span {
                font-size: 1.5rem;
                font-weight: bold;
                line-height: 1;
            }

            .time-box small {
                font-size: 0.6rem;
                text-transform: uppercase;
                letter-spacing: 1px;
                margin-top: 2px;
            }

        .product-flash-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .product-flash-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
            }

        .hover-zoom {
            transition: transform 0.3s;
        }

        .product-flash-card:hover .hover-zoom {
            transform: scale(1.05);
        }

        .text-truncate-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    </style>
}

@section Scripts {
    <script>
        // --- 1. LOGIC ĐỒNG HỒ ĐẾM NGƯỢC (FIXED) ---
        var countDownDate = new Date("@endTimeIso").getTime();

        var x = setInterval(function() {
            var now = new Date().getTime();
            var distance = countDownDate - now;

            if (distance < 0) {
                clearInterval(x);
                // Ẩn đồng hồ khi hết giờ
                document.getElementById("countdown-timer").innerHTML = "<span class='badge bg-secondary fs-5'>CHƯƠNG TRÌNH ĐÃ KẾT THÚC</span>";
                return;
            }

            var days = Math.floor(distance / (1000 * 60 * 60 * 24));
            var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            var seconds = Math.floor((distance % (1000 * 60)) / 1000);

            // Cộng ngày vào giờ để hiển thị kiểu (30 Giờ : 00 Phút...)
            hours += days * 24;

            document.getElementById("h").innerText = hours < 10 ? "0" + hours : hours;
            document.getElementById("m").innerText = minutes < 10 ? "0" + minutes : minutes;
            document.getElementById("s").innerText = seconds < 10 ? "0" + seconds : seconds;
        }, 1000);

        // --- 2. LOGIC MUA NGAY (FIXED) ---
        // Sử dụng đúng ID modal là 'buyNowModal' như trong HTML
        var myModal;

        function openFlashSaleModal(productId, productName, price, image) {
            // Gán dữ liệu vào Modal
            document.getElementById('modal-product-id').value = productId; // Input hidden
            document.getElementById('modal-img').src = image;
            document.getElementById('modal-name').innerText = productName;
            document.getElementById('modal-price').innerText = price;
            document.getElementById('modal-quantity').value = 1; // Reset số lượng

            // Mở Modal
            var el = document.getElementById('buyNowModal');
            myModal = new bootstrap.Modal(el);
            myModal.show();
        }

        function confirmBuyNow() {
            // Lấy ID và Số lượng từ Modal
            var pid = document.getElementById('modal-product-id').value;
            var qty = document.getElementById('modal-quantity').value;

            if (!pid) {
                alert("Lỗi sản phẩm!");
                return;
            }

            // Chuyển hướng sang trang MuaNgay (Logic tách giỏ hàng bạn đã fix)
            window.location.href = `/GioHang/MuaNgay?id=${pid}&quantity=${qty}`;
        }
    </script>
}