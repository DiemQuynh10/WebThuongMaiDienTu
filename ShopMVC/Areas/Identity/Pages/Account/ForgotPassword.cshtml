@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Quên mật khẩu?";
}

<div class="row justify-content-center mt-5">
    <div class="col-sm-6 col-md-5 col-lg-4">

        <div class="card shadow-lg p-4 mb-5 bg-white rounded">
            <div class="card-body">
                <h1 class="card-title text-center mb-3 text-primary">@ViewData["Title"]</h1>
                <h5 class="text-center text-muted mb-4">Vui lòng nhập email của bạn.</h5>
                <hr />

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Địa chỉ Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-lg btn-warning">Đặt lại Mật khẩu</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <p class="m-0">
                    <a href="./Login" class="text-decoration-none">Quay lại trang Đăng nhập</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}