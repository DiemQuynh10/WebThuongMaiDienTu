@model ShopMVC.Models.SanPham
@{
    var isEdit = Model.Id > 0;
    ViewData["Title"] = (isEdit ? "Sửa" : "Thêm") + " sản phẩm";
}

<style>
    /* Cột bên phải không bị stretch theo chiều cao cột trái */
    .fixed-right-col {
        align-self: flex-start;
    }

    /* Card ảnh nhỏ gọn, không bị kéo giãn */
    .existing-image-card {
        width: 110px;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h3 class="mb-0">@ViewData["Title"]</h3>
        @if (isEdit)
        {
            <a asp-action="Images" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Quản lý ảnh</a>
        }
    </div>

    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <div class="row">
            <div class="col-lg-8">
                <!-- Tên & mô tả -->
                <div class="mb-2">
                    <label class="form-label">Tên</label>
                    <input asp-for="Ten" class="form-control" />
                    <span asp-validation-for="Ten" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label class="form-label">Mô tả ngắn</label>
                    <input asp-for="MoTaNgan" class="form-control" />
                </div>

                <div class="mb-2">
                    <label class="form-label">Mô tả chi tiết</label>
                    <textarea asp-for="MoTaChiTiet" class="form-control" rows="5"></textarea>
                </div>

                <!-- Giá / KM / Tồn -->
                <div class="row">
                    <div class="col-md-4 mb-2">
                        <label class="form-label">Giá</label>
                        <input asp-for="Gia" class="form-control" />
                        <span asp-validation-for="Gia" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-2">
                        <label class="form-label">Giá KM</label>
                        <input asp-for="GiaKhuyenMai" class="form-control" />
                    </div>
                    <div class="col-md-4 mb-2">
                        <label class="form-label">Tồn kho</label>
                        <input asp-for="TonKho" class="form-control" />
                    </div>
                </div>

                <!-- Danh mục / Thương hiệu -->
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Danh mục</label>
                        <select asp-for="IdDanhMuc" asp-items="ViewBag.DanhMuc" class="form-select"></select>
                        <span asp-validation-for="IdDanhMuc" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Thương hiệu</label>
                        <select asp-for="IdThuongHieu" asp-items="ViewBag.ThuongHieu" class="form-select"></select>
                        <span asp-validation-for="IdThuongHieu" class="text-danger"></span>
                    </div>
                </div>

                <!-- NHÓM (CHA) & THUỘC TÍNH BIẾN THỂ -->
                <div class="mb-2">
                    <label class="form-label">Nhóm (cha)</label>
                    <select asp-for="ParentId" asp-items="ViewBag.Parents" class="form-select">
                        <option value="">— Đây là sản phẩm cha (mẫu) —</option>
                    </select>
                    <span asp-validation-for="ParentId" class="text-danger"></span>
                    <div class="form-text">
                        Muốn gom các màu/dung lượng vào <b>1 thẻ ngoài user</b>, hãy chọn cùng một <b>cha</b>.
                        Để trống nếu đây là <b>sản phẩm cha</b>.
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Hậu tố hiển thị (DisplaySuffix)</label>
                        <input asp-for="DisplaySuffix" class="form-control" placeholder="VD: Hồng 128GB / M / 42mm" />
                    </div>
                    <div class="col-md-3 mb-2">
                        <label class="form-label">Màu</label>
                        <input asp-for="Mau" class="form-control" placeholder="VD: Hồng" />
                    </div>
                    <div class="col-md-3 mb-2">
                        <label class="form-label">Thuộc tính 2</label>
                        <input asp-for="ThuocTinh2" class="form-control" placeholder="VD: 128GB / M" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-2">
                        <label class="form-label">SKU (mã biến thể)</label>
                        <input asp-for="SKU" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-2">
                        <div class="form-check mt-4">
                            <input class="form-check-input" asp-for="IsActive" />
                            <label class="form-check-label" for="IsActive">Biến thể đang hoạt động (bán được)</label>
                        </div>
                    </div>
                </div>

                <!-- Cờ hiển thị -->
                <div class="form-check mb-2">
                    <input class="form-check-input" asp-for="LaNoiBat" />
                    <label class="form-check-label" for="LaNoiBat">Nổi bật</label>
                </div>

                <div class="mb-2">
                    <label class="form-label">Trạng thái</label>
                    <select asp-for="TrangThai" class="form-select">
                        <option value="0">Ẩn</option>
                        <option value="1">Hiện</option>
                    </select>
                </div>

                <!-- Upload ảnh nhanh -->
                <div class="mb-3">
                    <label class="form-label">Tải ảnh (có thể chọn nhiều)</label>
                    <input type="file" name="files" multiple class="form-control" />
                    <div class="form-text">Ảnh đầu tiên sẽ được đặt làm ảnh chính nếu sản phẩm chưa có ảnh.</div>
                </div>

                <button class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
            </div>

            @if (isEdit)
            {
                <div class="col-lg-3 fixed-right-col">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="mb-0">Ảnh hiện có</h6>
                    </div>

                    <div class="d-flex flex-wrap gap-3">
                        @foreach (var a in Model.Anhs.OrderBy(x => x.ThuTu))
                        {
                            <div class="border rounded p-2 text-center shadow-sm existing-image-card">
                                <div class="mb-2" style="width:90px;height:90px;overflow:hidden;border-radius:6px;">
                                    <img src="@a.Url"
                                         alt="Ảnh sản phẩm"
                                         style="width:100%;height:100%;object-fit:cover;" />
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    @if (!a.LaAnhChinh)
                                    {
                                        <form method="post"
                                              asp-action="DatAnhChinh"
                                              asp-route-id="@a.Id"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button class="btn btn-sm btn-outline-success px-2 py-0">
                                                Đặt chính
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Chính</span>
                                    }

                                    <form method="post"
                                          asp-action="XoaAnh"
                                          asp-route-id="@a.Id"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-sm btn-link text-danger px-1 py-0"
                                                onclick="return confirm('Xoá ảnh này?');">
                                            Xoá
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>

                    @* Nếu đây là sản phẩm CHA, liệt kê các biến thể con để quản trị nhanh *@
                    @if (Model.ParentId == null && (Model.Children?.Any() ?? false))
                    {
                        <hr />
                        <h6 class="mb-2">Biến thể của mẫu này</h6>
                        <div class="list-group small">
                            @foreach (var c in Model.Children.OrderBy(x => x.Mau).ThenBy(x => x.ThuocTinh2))
                            {
                                <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                                   asp-action="Edit" asp-route-id="@c.Id">
                                    <span>
                                        @c.Ten
                                        @if (!string.IsNullOrWhiteSpace(c.DisplaySuffix))
                                        {
                                            <span class="text-muted">(@c.DisplaySuffix)</span>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(c.SKU))
                                        {
                                            <span class="ms-2 badge bg-light text-dark">SKU: @c.SKU</span>
                                        }
                                    </span>
                                    <span class="text-nowrap">@((c.GiaKhuyenMai ?? c.Gia).ToString("n0")) đ</span>
                                </a>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
