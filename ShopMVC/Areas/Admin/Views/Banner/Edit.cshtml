@model ShopMVC.Models.Banner

@{
    ViewData["Title"] = "Sửa banner";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Sửa banner</h3>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            Quay lại danh sách
        </a>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Tên banner -->
        <div class="mb-3">
            <label asp-for="TenBanner" class="form-label"></label>
            <input asp-for="TenBanner" class="form-control" />
            <span asp-validation-for="TenBanner" class="text-danger"></span>
        </div>

        <!-- Thứ tự -->
        <div class="mb-3">
            <label asp-for="ThuTu" class="form-label"></label>
            <input asp-for="ThuTu" class="form-control" />
            <span asp-validation-for="ThuTu" class="text-danger"></span>
        </div>

        <!-- Trạng thái -->
        <div class="mb-3">
            <label class="form-label d-block">Trạng thái</label>

            <div class="form-check form-check-inline">
                <input class="form-check-input"
                       type="radio"
                       asp-for="HienThi"
                       value="true"
                       id="statusShow" />
                <label class="form-check-label" for="statusShow">
                    Hiển thị
                </label>
            </div>

            <div class="form-check form-check-inline">
                <input class="form-check-input"
                       type="radio"
                       asp-for="HienThi"
                       value="false"
                       id="statusHide" />
                <label class="form-check-label" for="statusHide">
                    Ẩn
                </label>
            </div>

            <span asp-validation-for="HienThi" class="text-danger"></span>
        </div>

        <!-- Ảnh hiện tại -->
        <div class="mb-3">
            <label class="form-label">Ảnh hiện tại</label>
            <div>
                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                {
                    <img src="@Model.HinhAnh"
                         alt="Banner"
                         class="img-thumbnail"
                         style="max-height:180px;" />
                }
                else
                {
                    <p class="text-muted fst-italic mb-0">Chưa có ảnh</p>
                }
            </div>
        </div>

        <!-- Ảnh mới -->
        <div class="mb-3">
            <label class="form-label">Ảnh mới (nếu muốn thay)</label>
            <input type="file" name="fileAnh" class="form-control" />
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save me-1"></i> Lưu thay đổi
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                Hủy
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
