@model ShopMVC.Models.ThuongHieu

@{
    ViewData["Title"] = "Thêm thương hiệu";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-dark">Thêm Thương Hiệu</h3>
            <span class="text-muted">Tạo mới đối tác / nhãn hàng</span>
        </div>
        <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-4">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="row g-4">
            <div class="col-lg-9">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-5">
                        <h5 class="card-title fw-bold mb-4 text-primary">Thông tin chung</h5>

                        <div class="form-floating mb-3">
                            <input asp-for="Ten" class="form-control" id="TenThuongHieu" placeholder="Nhập tên..." onkeyup="generateSlug()" />
                            <label for="TenThuongHieu">Tên thương hiệu <span class="text-danger">*</span></label>
                            <span asp-validation-for="Ten" class="text-danger small"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Slug" class="form-control bg-light" id="Slug" placeholder="Slug..." readonly />
                            <label for="Slug">Slug (URL SEO)</label>
                            <span asp-validation-for="Slug" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-4">
                        <h5 class="card-title fw-bold mb-3 text-primary">Trạng thái</h5>

                        <div class="mb-4">
                            <div class="form-check form-switch ps-0">
                                <div class="d-flex align-items-center justify-content-between border rounded p-2">
                                    <label class="form-check-label small mb-0 ms-2" asp-for="HienThi">Hiển thị</label>
                                    <input asp-for="HienThi" class="form-check-input m-0" type="checkbox" role="switch" checked style="width: 2.5em; height: 1.25em;">
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary rounded-pill py-2 fw-bold shadow-sm">
                                <i class="bi bi-check2-circle me-1"></i> Lưu lại
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Script tạo Slug tự động (Giống hệt bên Danh mục)
        function generateSlug() {
            var title = document.getElementById('TenThuongHieu').value;

            // Xử lý chuỗi tiếng Việt và ký tự đặc biệt
            var slug = title.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "");
            slug = slug.replace(/[đĐ]/g, 'd');
            slug = slug.replace(/([^0-9a-z-\s])/g, '');
            slug = slug.replace(/(\s+)/g, '-');
            slug = slug.replace(/-+/g, '-');
            slug = slug.replace(/^-+|-+$/g, '');

            document.getElementById('Slug').value = slug;
        }
    </script>
}