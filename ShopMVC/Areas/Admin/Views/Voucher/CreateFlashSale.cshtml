@model ShopMVC.Areas.Admin.ViewModels.VoucherCreateViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var actionName = (ViewBag.Action as string ?? "CreateFlashSale").ToString();
    ViewData["Title"] = actionName == "Edit" ? "Cập nhật Flash Sale" : "Tạo Flash Sale";
}

<div class="container-fluid p-4 bg-white rounded shadow-sm">

    <div class="d-flex align-items-center mb-4">
        <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-3"
             style="width: 48px; height: 48px;">
            <i class="bi bi-lightning-fill fs-4"></i>
        </div>
        <div>
            <h3 class="fw-bold text-dark mb-0">@ViewData["Title"]</h3>
            <small class="text-muted">Thiết lập thời gian & mức giảm mặc định cho Flash Sale</small>
        </div>
    </div>

    <form asp-area="Admin"
          asp-controller="Voucher"
          asp-action="@(actionName == "Edit" ? "Edit" : "CreateFlashSale")"
          method="post"
          class="bg-white">

        @Html.AntiForgeryToken()

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        @* ID + RowVersion khi Edit *@
        @if (actionName == "Edit")
        {
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />
        }

        @* Flash Sale bắt buộc *@
        <input type="hidden" asp-for="IsFlashSale" value="true" />

        <!-- =================== 1. THÔNG TIN CHƯƠNG TRÌNH =================== -->
        <div class="card bg-light border-0 mb-4">
            <div class="card-body">
                <h5 class="card-title fw-bold text-secondary mb-3">1. Thông tin chương trình</h5>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Mã Flash Sale</label>
                        <input asp-for="Code" class="form-control fw-bold text-uppercase" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="col-md-8">
                        <label class="form-label fw-bold">Tên Flash Sale</label>
                        <input asp-for="Ten" class="form-control" />
                        <span asp-validation-for="Ten" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Bắt đầu</label>
                        <input asp-for="NgayBatDau"
                               type="datetime-local"
                               class="form-control" />
                        <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Kết thúc</label>
                        <input asp-for="NgayHetHan"
                               type="datetime-local"
                               class="form-control" />
                        <span asp-validation-for="NgayHetHan" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- =================== 2. MỨC GIẢM MẶC ĐỊNH =================== -->
        <div class="card bg-light border-0 mb-4">
            <div class="card-body">

                <h5 class="card-title fw-bold text-secondary mb-3">2. Mức giảm mặc định</h5>
                <p class="small text-muted fst-italic mb-3">
                    Các sản phẩm trong Flash Sale có thể đặt giá riêng.
                    Nếu không đặt giá riêng → dùng mức giảm mặc định này.
                </p>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label fw-bold">% Giảm</label>
                        <div class="input-group">
                            <input asp-for="PhanTramGiam"
                                   type="number"
                                   step="0.01"
                                   min="0"
                                   max="100"
                                   class="form-control"
                                   placeholder="VD: 50" />
                            <span class="input-group-text">%</span>
                        </div>
                        <span asp-validation-for="PhanTramGiam" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-bold">Giảm trực tiếp</label>
                        <div class="input-group">
                            <input asp-for="GiamTrucTiep"
                                   type="number"
                                   step="1000"
                                   min="0"
                                   class="form-control"
                                   placeholder="VD: 50000" />
                            <span class="input-group-text">đ</span>
                        </div>
                        <span asp-validation-for="GiamTrucTiep" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-bold">Giảm tối đa</label>
                        <div class="input-group">
                            <input asp-for="GiamToiDa"
                                   type="number"
                                   step="1000"
                                   min="0"
                                   class="form-control"
                                   placeholder="VD: 100000" />
                            <span class="input-group-text">đ</span>
                        </div>
                        <span asp-validation-for="GiamToiDa" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- =================== KÍCH HOẠT =================== -->
        <div class="d-flex align-items-center mb-4">
            <div class="form-check form-switch">
                <input class="form-check-input" asp-for="IsActive" />
                <label class="form-check-label fw-bold" asp-for="IsActive">Kích hoạt</label>
            </div>
        </div>

        <!-- =================== NÚT LƯU =================== -->
        <div class="d-flex gap-2 border-top pt-3">
            <button type="submit" class="btn btn-danger px-4 py-2 fw-bold">
                @(actionName == "Edit"
                    ? "Cập nhật"
                    : "Tiếp tục: Chọn sản phẩm")
                <i class="bi bi-arrow-right"></i>
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                Hủy
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
