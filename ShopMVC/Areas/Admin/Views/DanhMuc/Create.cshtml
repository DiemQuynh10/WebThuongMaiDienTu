@model ShopMVC.Models.DanhMuc

@{
    ViewData["Title"] = "Create Category";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-dark">Thêm Danh Mục</h3>
            <span class="text-muted">Tạo mới loại sản phẩm vào hệ thống</span>
        </div>
        <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-4">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="row g-4">

            <div class="col-lg-9">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-5">
                        <h5 class="card-title fw-bold mb-4 text-primary">Thông tin chi tiết</h5>

                        <div class="form-floating mb-3">
                            <input asp-for="Ten" class="form-control" id="TenDanhMuc" placeholder="Nhập tên..." onkeyup="generateSlug()" />
                            <label for="TenDanhMuc">Tên danh mục <span class="text-danger">*</span></label>
                            <span asp-validation-for="Ten" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Slug" class="form-control bg-light" id="Slug" placeholder="Slug..." readonly />
                            <label for="Slug">Slug (URL SEO)</label>
                        </div>

                        <div class="form-floating">
                            <textarea asp-for="MoTa" class="form-control" placeholder="Mô tả..." style="height: 150px"></textarea>
                            <label for="MoTa">Mô tả danh mục</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="card border-0 shadow-sm rounded-4 h-100">
                    <div class="card-body p-4">
                        <h5 class="card-title fw-bold mb-3 text-primary">Thiết lập</h5>

                        <div class="text-center mb-3">
                            <div class="ratio ratio-1x1 bg-light rounded-3 overflow-hidden position-relative border border-2 border-light mx-auto">
                                <img id="imgPreview" src="#" alt="Preview" class="w-100 h-100 object-fit-cover" style="display:none;" />
                                <div id="placeholderIcon" class="d-flex align-items-center justify-content-center h-100 text-muted">
                                    <div class="text-center">
                                        <i class="bi bi-image fs-1 opacity-50"></i>
                                        <div class="small mt-1">Chưa chọn ảnh</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small text-muted">ICON / ẢNH</label>
                            <input type="file" name="icon" class="form-control form-control-sm" accept="image/*" onchange="previewImage(this)" />
                        </div>

                        <hr class="my-3 text-muted opacity-25">

                        <div class="mb-3">
                            <label class="form-label fw-bold small text-muted">THỨ TỰ</label>
                            <input asp-for="ThuTu" class="form-control" type="number" min="0" placeholder="0" />
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch ps-0">
                                <div class="d-flex align-items-center justify-content-between border rounded p-2">
                                    <label class="form-check-label small mb-0 ms-2" asp-for="HienThi">Hiển thị</label>
                                    <input asp-for="HienThi" class="form-check-input m-0" type="checkbox" role="switch" checked style="width: 2.5em; height: 1.25em;">
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-bold shadow-sm">
                            <i class="bi bi-check2-circle me-1"></i> Lưu lại
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    var img = document.getElementById('imgPreview');
                    img.src = e.target.result;
                    img.style.display = 'block';
                    document.getElementById('placeholderIcon').style.display = 'none';
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function generateSlug() {
            var title = document.getElementById('TenDanhMuc').value;
            var slug = title.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "");
            slug = slug.replace(/[đĐ]/g, 'd');
            slug = slug.replace(/([^0-9a-z-\s])/g, '');
            slug = slug.replace(/(\s+)/g, '-');
            slug = slug.replace(/-+/g, '-');
            slug = slug.replace(/^-+|-+$/g, '');
            document.getElementById('Slug').value = slug;
        }
    </script>
}